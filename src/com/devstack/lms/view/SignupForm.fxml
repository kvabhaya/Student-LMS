<AnchorPane fx:id="context" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.lms.controller.SignupFormController">
   <children>
      <Button layoutX="115.0" layoutY="232.0" mnemonicParsing="false" onAction="#createNewAccountOnAction" prefHeight="28.0" prefWidth="110.0" text="Register" />
      <TextField fx:id="txtUsername" layoutX="25.0" layoutY="142.0" prefHeight="28.0" prefWidth="290.0" promptText="Username" />
      <PasswordField fx:id="txtPassword" layoutX="25.0" layoutY="187.0" prefHeight="28.0" prefWidth="290.0" promptText="Password" />
      <ImageView fitHeight="396.0" fitWidth="273.0" layoutX="325.0" layoutY="2.0" pickOnBounds="true">
         <image>
            <Image url="@../assets/login.png" />
         </image>
      </ImageView>
      <Label layoutX="28.0" layoutY="98.0" text="Signup">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Hyperlink layoutX="90.0" layoutY="333.0" onAction="#navigateToLoginFormOnAction" text="Already have an account" />
      <Separator layoutX="70.0" layoutY="315.0" prefWidth="200.0" />
   </children>
</AnchorPane>
